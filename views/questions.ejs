<html>
    <body style="background-color:powderblue;">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <div class="container">
    <h1 align="center"Quiz</h1>
    <h1>Question <%=number%></h1>
    <h1><%=dataout.question%><br><br><br></h1>
    <% if(correct==1){ %>
    <form class="box" action="/answers" method="post">
        <input type="radio" name="opt" value="1">
        <label for="male"><%=dataout.correct_answer%></label><br>
        <input type="radio" name="opt" value="2">
        <label for="female"><%=incorrect[0]%></label><br>
        <input type="radio" name="opt" value="3">
        <label for="other"><%=incorrect[1]%></label><br>
        <input type="radio" name="opt" value="4">
        <label for="other"><%=incorrect[2]%></label><br><br><br><br>
        <input type="submit" value="Check-Answer">
    </form> 
    <% }else if(correct==2){ %>
        <form class="box" action="/answers" method="post">
            <input type="radio" name="opt" value="1">
            <label for="male"><%=incorrect[0]%></label><br>
            <input type="radio" name="opt" value="2">
            <label for="female"><%=dataout.correct_answer%></label><br>
            <input type="radio" name="opt" value="3">
            <label for="other"><%=incorrect[1]%></label><br>
            <input type="radio" name="opt" value="4">
            <label for="other"><%=incorrect[2]%></label><br><br><br><br>
            <input type="submit" value="Check-Answer">
        </form> 
       <% }else if(correct==3){ %>
            <form class="box" action="/answers" method="post">
                <input type="radio" name="opt" value="1">
                <label for="male"><%=incorrect[0]%></label><br>
                <input type="radio" name="opt" value="2">
                <label for="female"><%=incorrect[1]%></label><br>
                <input type="radio" name="opt" value="3">
                <label for="other"><%=dataout.correct_answer%></label><br>
                <input type="radio" name="opt" value="4">
                <label for="other"><%=incorrect[2]%></label><br><br><br><br>
                <input type="submit" value="Check-Answer">
            </form> 
          <%  }else{ %>
                <form class="box" action="/answers" method="post">
                    <input type="radio" name="opt" value="1">
                    <label for="male"><%=incorrect[0]%></label><br>
                    <input type="radio" name="opt" value="2">
                    <label for="female"><%=incorrect[1]%></label><br>
                    <input type="radio" name="opt" value="3">
                    <label for="other"><%=incorrect[2]%></label><br>
                    <input type="radio" name="opt" value="4">
                    <label for="other"><%=dataout.correct_answer%></label><br><br><br><br>
                    <input type="submit" value="Check-Answer">
                </form> 
                <% } %>
            </div>
        </body>
</html>